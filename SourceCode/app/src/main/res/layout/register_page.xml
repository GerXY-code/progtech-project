<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232222"
    android:foregroundTint="@color/white">

    <EditText
        android:id="@+id/email_f_register_input_txt"
        android:layout_width="241dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="#5D5D5D"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_f_register_input_txt"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Username..."
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#5D5D5D"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_f_register_input_txt"
        android:layout_width="239dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#5D5D5D"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="#5782ED"
        android:text="Sign Up"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_from_reg_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="570dp"
        android:backgroundTint="#DD6730"
        android:text="Back to login"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:foregroundTint="@color/white"
        android:text="Make your free account!"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/t_c_check_box_f_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="420dp"
        android:buttonTint="@color/white"
        android:text="Agree with terms and conditions"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>